# Nginx configuration for DTH Project - Frontend Only
# Copy this file to /etc/nginx/nginx.conf on your server
# Or include this in your main nginx.conf
#
# IMPORTANT: Before using this config, ensure:
# 1. Frontend (Next.js) is running on localhost:3000
# 2. Test with: curl http://localhost:3000
#
# If frontend is still not working:
# - Check if Next.js is running: ps aux | grep node
# - Check Next.js logs for errors
# - Verify port 3000 is accessible: netstat -tuln | grep 3000
# - Check nginx error logs: tail -f /var/log/nginx/error.log
# - Test nginx config: sudo nginx -t
# - Reload nginx: sudo systemctl reload nginx

user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log notice;
pid /run/nginx.pid;

# Load dynamic modules
include /usr/share/nginx/modules/*.conf;

events {
    worker_connections 1024;
}

http {
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;

    sendfile on;
    tcp_nopush on;
    keepalive_timeout 65;
    types_hash_max_size 4096;

    include /etc/nginx/mime.types;
    default_type application/octet-stream;
    
    # Map for WebSocket connections
    map $http_upgrade $connection_upgrade {
        default upgrade;
        '' close;
    }

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/rss+xml font/truetype font/opentype application/vnd.ms-fontobject image/svg+xml;

    # Server configuration for DTH Project
    
    # HTTP server (redirect to HTTPS)
    server {
        listen 80;
        server_name suachuanho.com.vn www.suachuanho.com.vn;
        
        # Redirect HTTP to HTTPS
        return 301 https://$server_name$request_uri;
    }

    # HTTPS server configuration
    server {
        listen 443 ssl http2;
        server_name suachuanho.com.vn www.suachuanho.com.vn;
        
        # SSL certificates (adjust paths based on your certificate location)
        ssl_certificate /etc/letsencrypt/live/suachuanho.com.vn/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/suachuanho.com.vn/privkey.pem;
        
        # SSL configuration
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers HIGH:!aNULL:!MD5;
        ssl_prefer_server_ciphers on;
        ssl_session_cache shared:SSL:10m;
        ssl_session_timeout 10m;
        
        client_max_body_size 10M;

        # Health check endpoint
        location = /health {
            access_log off;
            return 200 "healthy\n";
            add_header Content-Type text/plain;
        }

        # Frontend (Next.js) - All routes
        location / {
            proxy_pass http://localhost:3000;
            proxy_http_version 1.1;
            
            # Essential headers for Next.js
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Port $server_port;
            
            # WebSocket support for Next.js HMR
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_cache_bypass $http_upgrade;
            
            # Timeouts - increased for Next.js
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
            
            # Buffer settings
            proxy_buffering off;
            proxy_request_buffering off;
            
            # Error handling
            proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
            proxy_next_upstream_tries 2;
            proxy_next_upstream_timeout 10s;
            
            # Don't intercept errors - let Next.js handle them
            proxy_intercept_errors off;
        }
    }
}

