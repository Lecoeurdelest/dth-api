# Deployment Configuration
# Copy this file to .env and fill in your values

# Required: Server IP address
SERVER_IP=your-server-ip-here

# Optional: SSH Configuration
# Option 1: Use SSH_PRIVATE_KEY (paste full key content below)
# SSH_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----
# ... (paste full key content here)
# -----END RSA PRIVATE KEY-----

# Option 2: Use SSH_KEY_PATH (place key file in infra/ directory)
# SSH_KEY_PATH=pdth.pem

# Optional: Server Configuration (has defaults)
SERVER_USER=ec2-user
DEPLOY_PATH=/opt/dth/dth-api
SERVICE_NAME=dth-api

# Optional: Build Configuration (has defaults)
GRADLE_VERSION=8.5
JAVA_VERSION=17
BUILD_PROFILE=prod
SKIP_TESTS=true
JAR_FILENAME=app-0.0.1-SNAPSHOT.jar

# Optional: Save JAR locally after build
SAVE_JAR=false
JAR_OUTPUT_PATH=build/output/app.jar
